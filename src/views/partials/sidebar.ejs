<% const menuItems=[ { href: '/dashboard' , icon: 'fa-home' , label: 'Overzicht' , role_id: 2 }, {
  href: '/wedstrijden' , icon: 'fa-trophy' , label: 'Wedstrijden' , role_id: 2 }, { href: '/bestellen' ,
  icon: 'fa-shopping-cart' , label: 'Bestellen' , role_id: 2 }, { href: '/rekening' , icon: 'fa-wallet' ,
  label: 'Rekening' , role_id: 2 }, { href: '/profiel' , icon: 'fa-user' , label: 'Profiel' , role_id: 2 }, {
  href: '/beheerderspaneel' , icon: 'fa-server' , label: 'Beheerderspaneel' , role_id: 1 }, { href: '/uitloggen' ,
  icon: 'fa-sign-out-alt' , label: 'Uitloggen' , role_id: 2 } ]; const currentPath=locals?.currentPath || '' ;
  const title=locals?.siteTitle || 'Ping Pong Tool' ; %>

  <div class="hamburger" id="hamburger"><span></span></div>

  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <div class="sidebar-header__logo">
        <img src="/assets/images/logo.png" alt="Logo" />
      </div>
    </div>

    <nav class="sidebar-menu">
      <ul>
        <% menuItems.forEach(item=> { %> <% if (item.role_id === 2 || (item.role_id === 1 && user.role_id === 1)) { %>
            <li>
              <a href="<%= item.href %>" class="<%= currentPath === item.href ? 'active' : '' %>">
                <i class="fas <%= item.icon %>"></i>
                <span>
                  <%= item.label %>
                </span>
              </a>
            </li>
            <% } %>
              <% }); %>
      </ul>
    </nav>
  </div>