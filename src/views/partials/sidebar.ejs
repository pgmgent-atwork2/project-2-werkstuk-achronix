<% 
const menuItems=[ { href: '/dashboard', icon: 'fa-home', label: 'Overzicht',
is_admin: false }, { href: '/bestellen', icon: 'fa-shopping-cart', label:
'Bestellen', is_admin: false }, { href: '/wedstrijden', icon: 'fa-trophy',
label: 'Wedstrijden', is_admin: false }, { href: '/profiel', icon: 'fa-user',
label: 'Profiel', is_admin: false }, { href: '/beheerderspaneel', icon:
'fa-server', label: 'Beheerderspaneel', is_admin: true }, { href: '/uitloggen',
icon: 'fa-sign-out-alt', label: 'Uitloggen', is_admin: false } ]; 


const currentPath=locals?.currentPath || '';
const title=locals?.siteTitle || 'Ping Pong Tool' ; %>

<div class="hamburger" id="hamburger"><span></span></div>

<div class="sidebar" id="sidebar">
  <div class="sidebar-header">
    <div class="sidebar-header__logo">
      <img src="/assets/images/logo.png" alt="Logo" />
    </div>
  </div>

  <nav class="sidebar-menu">
    <ul>
      <% menuItems.forEach(item=> { %> <% if (item.is_admin == user.is_admin || user.is_admin == true) {
      %>
      <li>
        <a
          href="<%= item.href %>"
          class="<%= currentPath === item.href ? 'active' : '' %>"
        >
          <i class="fas <%= item.icon %>"></i>
          <span> <%= item.label %> </span>
        </a>
      </li>
      <% } %> <% }); %>
    </ul>
  </nav>
</div>
