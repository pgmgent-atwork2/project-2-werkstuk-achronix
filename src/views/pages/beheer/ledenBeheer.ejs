<div>
  <h1 class="title">Leden beheren</h1>
  <section>
    <div>
      <button id="addNewUser" class="btn btn--primary">Nieuwe gebruiker</button>
    </div>

    <div class="table-controls">
      <div class="search-container">
        <input
          type="text"
          id="searchInput-user"
          placeholder="Zoeken op naam"
          class="search-input"
        />
      </div>
      <div class="filter-container">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="filter-icon"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z"
          />
        </svg>
        <div class="filter">
          <select id="filterSelect-user" class="filter-select">
            <option value="">Alle gebruikers</option>
            <option value="1">Beheerders</option>
            <option value="2">Gebruikers</option>
            <option value="3">Gasten</option>
          </select>
        </div>
      </div>
    </div>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Voornaam</th>
            <th>Achternaam</th>
            <th>Email</th>
            <th>rol</th>
            <th>Notificaties</th>
            <th>Acties</th>
          </tr>
        </thead>
        <tbody id="userTableBody">
          <% if(users && users.length> 0) { %> <% users.forEach(user=> { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td><%= user.role.name %></td>
            <td><%= user.receive_notifications ? 'Ja' : 'Nee' %></td>
            <td>
              <button
                class="btn btn--secondary edit-user"
                data-id="<%= user.id %>"
              >
                Bewerken
              </button>
                <% if (user.role.name !== 'admin') { %>
                <button
                class="btn btn--danger delete-user"
                data-id="<%= user.id %>"
                >
                Verwijderen
                </button>
                <% } %>
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="7">Geen gebruikers gevonden</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>
</div>
