<div>
    <h1>Leden beheren</h1>
    <section>

        <div>
            <button id="addNewUser" class="btn">Nieuwe gebruiker</button>
        </div>

        <div>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Voornaam</th>
                        <th>Achternaam</th>
                        <th>Email</th>
                        <th>Admin</th>
                        <th>Notificaties</th>
                        <th>Acties</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(users && users.length> 0) { %>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.firstname %>
                                </td>
                                <td>
                                    <%= user.lastname %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.is_admin ? 'Ja' : 'Nee' %>
                                </td>
                                <td>
                                    <%= user.receive_notifications ? 'Ja' : 'Nee' %>
                                </td>
                                <td>
                                    <button class="btn btn--secondary edit-user"
                                        data-id="<%= user.id %>">Bewerken</button>
                                    <button class="btn btn--danger delete-user"
                                        data-id="<%= user.id %>">Verwijderen</button>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Geen gebruikers gevonden</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </section>
</div>