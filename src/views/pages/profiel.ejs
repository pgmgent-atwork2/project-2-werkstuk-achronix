<div class="profile-page">
    <div class="profile-container">
        <h1 class="profile-title">Mijn Profiel</h1>

        <div class="user-info">
            <p class="user-name">
                <%= user.firstname %>
                    <%= user.lastname %>
            </p>
        </div>

        <div class="profile-form-section">
            <form id="profile-form" class="profile-form">

                <div class="form-group">
                    <label for="email">E-mailadres</label>
                    <input type="email" id="email" name="email" value="<%= user.email %>" required>
                </div>

                <div class="form-group">
                    <label for="receive_notifications">Email notificaties ontvangen</label>
                    <input class="notification-checkbox" type="checkbox" id="receive_notifications"
                        name="receive_notifications" <%=user.receive_notifications ? 'checked' : '' %>>
                </div>

                <h2 class="password-section-title">Wachtwoord wijzigen</h2>
                <p class="password-info">(Laat deze velden leeg als je je wachtwoord niet wilt wijzigen)</p>

                <div class="form-group">
                    <label for="current_password">Huidig wachtwoord</label>
                    <input type="password" id="current_password" name="current_password">
                </div>

                <div class="form-group">
                    <label for="new_password">Nieuw wachtwoord</label>
                    <input type="password" id="new_password" name="new_password">
                </div>

                <div class="form-group">
                    <label for="confirm_password">Bevestig nieuw wachtwoord</label>
                    <input type="password" id="confirm_password" name="confirm_password">
                </div>

                <div id="password-error" class="error-message hidden"></div>
                <div id="profile-success" class="success-message hidden"></div>

                <button type="submit" class="btn btn--primary">Opslaan</button>
            </form>
        </div>
    </div>
</div>