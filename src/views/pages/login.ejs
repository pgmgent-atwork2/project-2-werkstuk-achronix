<div class="login-page">
  <div class="login-container">
    <div class="login-form-section">
      <div class="login-header">
        <h1 class="login-title">Welkom</h1>
        <p class="login-subtitle">Log in om door te gaan</p>
      </div>

      <form class="login-form" action="login" method="post">
        <% locals.inputs?.forEach(input=> { %>
          <%- include('../partials/form-input', input) %>
            <% }); %>

              <button class="login-button" type="submit" value="Login">Inloggen</button>
      </form>

      <div class="login-links">
        <p class="login-help-text">
          Wachtwoord vergeten? <a class="login-link" href="">Klik hier</a>
        </p>
      </div>
    </div>

    <div class="login-image-section">
      <img src="assets/images/pingpong.png" alt="Pingpong afbeelding" class="login-image">
    </div>
  </div>
</div>