<div class="dashboard-container">
  <div class="dashboard-header dashboard-header--main">
    <div class="dashboard-header__content"></div>
    <h1 class="dashboard-title dashboard-title--primary">Welkom, <%= user.firstname %>
    </h1>
    <p class="dashboard-subtitle dashboard-subtitle--muted">
      Bekijk hier je openstaande rekeningen en andere belangrijke informatie.
    </p>
  </div>
</div>
<div class="dashboard-grid">


  <% if (locals.backInStockNotifications && backInStockNotifications.length> 0) { %>
    <div class="notifications-section">
      <h2 class="section-title">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
          stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
        </svg>
        Nieuw op voorraad!
      </h2>
      <div class="notifications-container">
        <% backInStockNotifications.forEach(notification=> { %>
          <div class="notification-item notification-item--success"
            data-consumable-id="<%= notification.consumable_id %>">
            <div class="notification-content">
              <h3 class="notification-title">
                <%= notification.title %>
              </h3>
              <p class="notification-message">
                <%= notification.message %>
              </p>
              <a href="/bestellen" class="notification-action">Ga naar bestellen →</a>
            </div>
          </div>
          <% }) %>
            <% if (backInStockNotifications.length> 1) { %>
              <button class="btn btn--secondary" onclick="dismissAllNotifications()">
                Alle meldingen wegvegen
              </button>
              <% } %>
      </div>
    </div>
    <% } %>

      <% if (locals.adminNotifications && adminNotifications.length> 0) { %>
        <div class="notifications-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
            </svg>
            Berichten van beheerders
          </h2>
          <div class="notifications-container">
            <% adminNotifications.forEach(notification=> { %>
              <div class="notification-item notification-item--info"
                data-admin-notification-id="<%= notification.id %>">
                <div class="notification-content">
                  <h3 class="notification-title">
                    <%= notification.title %>
                  </h3>
                  <p class="notification-message">
                    <%= notification.message %>
                  </p>
                  <small class="notification-date">
                    <%= new Date(notification.created_at).toLocaleDateString('nl-BE', { year: 'numeric' , month: 'long'
                      , day: 'numeric' }) %>
                  </small>
                </div>
              </div>
              <% }) %>
                <button class="btn btn--secondary" onclick="dismissAllAdminNotifications()">
                  <% if (adminNotifications.length===1) { %>
                    Bericht wegvegen
                    <% } else { %>
                      Alle berichten wegvegen
                      <% } %>
                </button>
          </div>
        </div>
        <% } %>

          <div class="dashboard-section">
            <h2 class="section-title">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" />
              </svg>
              Openstaande rekening
            </h2>

            <% if (orders && orders.some(order=> order.status === 'NOT_PAID')) { %> <% orders.forEach(order=> { %> <% if
                  (order.status==='NOT_PAID' ) { %>
                  <div class="order-card">


                    <p class="order-total">
                      Totaal: €<%= order.orderItems.reduce((total, item)=> total +
                        item.price, 0) %>
                    </p>


                    <a href="/rekening" class="payment-button">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                          d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
                      </svg>
                      Ga naar rekening
                    </a>
                  </div>
                  <% } %>
                    <% }) %>
                      <% } else { %>
                        <div class="dashboard-empty-state">
                          Je hebt geen openstaande bedrag.
                        </div>
                        <% } %>
          </div>

          <div class="dashboard-section">
            <h2 class="section-title">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
              </svg>
              Komende wedstrijden
            </h2>
            <div class="dashboard-empty-state">
              Hier komen binnenkort je aankomende wedstrijden te staan.
            </div>
          </div>
</div>
</div>

<script type="module" src="/scripts/pages/dashboard.js"></script>