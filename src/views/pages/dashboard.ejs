<%- contentFor('head') %>
  <link rel="stylesheet" href="/styles/pages/dashboard.css">

  <%- contentFor('body') %>
    <div class="dashboard-container">
      <div class="dashboard-header">
        <h1 class="dashboard-title">Welkom, <%= user.firstname %>
        </h1>
        <p class="dashboard-subtitle">Bekijk hier je openstaande rekeningen en andere belangrijke informatie.</p>
      </div>      

      <div class="dashboard-grid">
        <div class="dashboard-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" />
            </svg>
            Openstaande rekeningen
          </h2>

          <% if (orders && orders.some(order=> order.status === 'NOT_PAID')) { %>
            <% orders.forEach(order=> { %>
              <% if (order.status==='NOT_PAID' ) { %>
                <div class="order-card">
                  <p class="order-id">Bestelling #<%= order.id %>
                  </p>

                  <div class="order-items-container">
                    <% order.orderItems.forEach(item=> { %>
                      <div class="order-item">
                        <p class="item-name">
                          <%= item.consumable.name %>
                        </p>
                        <p class="item-quantity">
                          <%= item.quantity %> st.
                        </p>
                        <p class="item-price">€<%= item.price.toFixed(2) %>
                        </p>
                      </div>
                      <% }) %>
                  </div>
                        <p class="order-total">Totaal: €<%= order.orderItems.reduce((total, item) => total + item.price, 0) %>
                        </p>

                  <form class="payment-form" action="/create-payment" method="post">
                    <input type="hidden" name="userId" value="<%= user.id %>" />
                    <input type="hidden" name="orderId" value="<%= order.id %>" />
                    <input type="hidden" name="amount" value="<%= totalPrice %>" />
                    <button class="payment-button" type="submit">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                          d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
                      </svg>
                      Betalen
                    </button>
                  </form>
                </div>
                <% } %>
                  <% }) %>
                    <% } else { %>
                      <div class="dashboard-empty-state">
                        Je hebt geen openstaande rekeningen.
                      </div>
                      <% } %>
        </div>

        <div class="dashboard-section">
          <h2 class="section-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
            </svg>
            Komende wedstrijden
          </h2>
          <div class="dashboard-empty-state">
            Hier komen binnenkort je aankomende wedstrijden te staan.
          </div>
        </div>

      </div>
    </div>